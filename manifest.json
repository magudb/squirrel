{
  "manifest_version": 2,

  "name": "Squirrel",
  "description": "This collects links and stores them for winter or the the link blog",
  "version": "1.0",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],

  "icons": {
    "16": "images/icon.png",
    "128": "images/icon.png"
  },
  "browser_action": {
   "default_icon": "images/icon.png",
   "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "identity",
    "identity.email"
  ],
  "commands": {      
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+F"            
            }
        }
    }
}